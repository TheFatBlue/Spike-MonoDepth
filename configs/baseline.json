{
    "name": "train_s2d_SpikeTransformer",
    "cuda": true,
    "gpu": 0,
    "data_loader": {
        "train": {
            "type": "SpikeMonoDataset",
            "base_folder": "Spike-Stero/train",
            "scene": "indoor",
            "side": "left",
            "clip_distance": 4.0,
            "reg_factor": 1.86,
            "every_x_rgb_frame": 1,
            "baseline": "s"
        },
        "validation": {
            "type": "SpikeMonoDataset",
            "base_folder": "Spike-Stero/validation",
            "scene": "indoor",
            "side": "left",
            "clip_distance": 4.0,
            "reg_factor": 1.86,
            "every_x_rgb_frame": 1,
            "baseline": "s"
        },
        "batch_size": 12,
        "num_workers": 6,
        "pin_memory": true,
        "normalize": true,
        "shuffle": true
    },
    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 50,
    "lr_scheduler": {
        "gamma": 0.5
    },
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0003,
        "weight_decay": 0
    },
    "loss": {
        "type": "scale_invariant_loss",
        "config": {"weight": 1.0, "n_lambda" : 1.0}
    },
    "grad_loss": {
        "weight": 0.25
    },
    "metrics": [
        "mse",
        "abs_rel_diff",
        "scale_invariant_error",
        "median_error"
    ],
    "trainer": {
        "epochs": 100,
        "sequence_length": 1,
        "save_dir": "/root/autodl-tmp/train_il_100e/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min",
        "num_previews": 2,
        "num_val_previews": 2,
        "still_previews": true,
        "grid_loss": true,
        "loss_composition": "image",
        "loss_weights": [1]
    },
    "arch": "S2DepthTransformerUNetConv",
    "use_phased_arch": false,
    "model": {
        "num_bins_rgb": 128,
        "num_bins_events": 128,
        "skip_type": "sum",
        "recurrent_block_type": "conv",
        "state_combination": "convlstm",
        "spatial_resolution": [112, 112],
        "num_encoders": 3,
        "base_num_channels": 96,
        "num_residual_blocks": 2,
        "use_upsample_conv": true,
        "norm": "none",
        "swin_depths": [2,2,6],
        "swin_num_heads": [3,6,12],
        "swin_out_indices": [0,1,2],
        "swin_patch_size": [32,2,2],
        "ape": true,
        "new_v": 4
    }
}
